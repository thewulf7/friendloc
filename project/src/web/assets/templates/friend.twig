<div class="info">
    <div class="row">
        <div class="col-lg-2 col-md-3 col-xs-12">
            <div class="userpic alert-info">{{ sign }}</div>
        </div>
        <div class="col-lg-10 col-md-9 col-xs-12">
            <h2 class="blog-post-title">{{ name }}</h2>
            <p class="blog-post-meta">{{ location }}</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-10 col-lg-offset-2 col-md-offset-3 col-md-9 col-xs-12">
            <div class="btn-group">
                {% if isFriend == false %}
                    <button class="btn btn-success" data-id="{{ id }}" id="addToFriends">Add to friends</button>
                {% elseif isFriend == true %}
                    <button class="btn btn-danger" data-id="{{ id }}" id="removeFromFriends">Remove from friends</button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
