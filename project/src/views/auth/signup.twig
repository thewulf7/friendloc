{% extends layout %}

{% block style %}
    <link href="/assets/css/signup.css" rel="stylesheet">
{% endblock %}

{% block js %}
    <script type="text/javascript" src="//www.google.com/jsapi"></script>
    {{ location.js | raw }}
{% endblock %}

{% block content %}
    <div class="wrap">
        <div class="container">
            <form action="/auth/signup" method="post">
                <div class="form-signin">
                    <span class="logo glyphicon glyphicon-lock" aria-hidden="true"></span>
                    <h2 class="form-signin-heading">FriendLock Signup</h2>
                    {% if errors %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in errors %}
                                    <li>{{ error }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    <label for="inputName" class="sr-only">Name</label>
                    <input type="text" name="name" id="inputName" class="form-control" placeholder="Name"
                           required="required"
                           autofocus="autofocus" value="{{ data.name }}"/>
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address"
                           required="required" value="{{ data.email }}"/>
                    <br/>
                    <input type="hidden" name="location[lat]" value="{{ data.lat }}"/>
                    <input type="hidden" name="location[lng]" value="{{ data.lng }}"/>
                    {{ location.html | raw }}
                </div>
                {{ location.map | raw }}
                <div class="form-signin">
                    <div class="checkbox">
                        <a class="signup-link" href="/auth/login">Signin</a><br/>
                    </div>
                    <button class="btn btn-lg btn-success btn-block" type="submit">Signup</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}